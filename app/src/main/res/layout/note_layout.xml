<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="14dp">

            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_marginEnd="17dp"
                android:layout_marginBottom="10dp"
                android:textAppearance="@style/Base.CardView"
                android:textSize="14sp"
                tools:text="My First Note" />

            <TextView
                android:id="@+id/text_view_body"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_below="@id/text_view_title"
                android:layout_alignStart="@+id/text_view_title"
                android:layout_alignEnd="@+id/text_view_title"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:textAppearance="@style/Base.CardView"
                android:textSize="10sp"
                tools:text="Note Description" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>